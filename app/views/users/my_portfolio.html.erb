<h1>My portfolio</h1>

<div class="search_area"> 
    <h3>Search Stock</h3>
    <%= form_tag search_stock_path, remote: true, method: :get do  %>
        <div class="form-group row">
            <div class="col-sm-9">
                <%= text_field_tag :stock, params[:stock], placeholder: "Stock search" %>
            </div>
            <div class="col-sm-3">
             <%= button_tag type: :submit, class: "btn btn-success" do%>
                <%= "search"%>
             <%end%>
        </div>
    <% end %>
</div>
<div id="result">
    
</div>
<% unless @trakcer_stocks.empty?%>
    <%= render  "stocks/list" %>
<%end%>
